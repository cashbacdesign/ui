{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "declarationDir": "lib",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": [".storybook", "./src/**/*.stories.js", "./src/static"]
}
