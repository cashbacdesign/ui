{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__STAGING__"  : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false,
    "__VERSION__"  : false
  },
  "rules": {
    "key-spacing"                  : 0,
    "semi"                         : [2, "always"],
    "curly"                        : [2, "all"],
    "brace-style"                  : [2, "1tbs", {}],
    "jsx-quotes"                   : [2, "prefer-single"],
    "max-len"                      : [2, 120, 2],
    "space-before-function-paren"  : ["error", "always"],
    "array-bracket-spacing"        : ["error", "always"],
    "object-curly-spacing"         : ["error", "always"],
    "no-tabs"                      : 0,
    "indent"                       : [2, 2],
    "react/jsx-indent"             : [2, 2],
    "react/jsx-indent-props"       : [2, 2]
  }
}
